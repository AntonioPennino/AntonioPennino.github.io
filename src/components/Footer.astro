<style>
/* Styles for Footer.astro, adapted from style.css and fixes.css */
footer {
    background-color: #2c3e50; /* Dark blue-gray background */
    color: #ecf0f1; /* Light gray text */
    padding: 60px 0 30px;
    font-size: 0.95em;
}

.footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 30px;
    margin-bottom: 40px;
}

.footer-section {
    flex: 1;
    min-width: 220px; /* Minimum width for responsiveness */
    margin-bottom: 20px;
}

.footer-section h4 {
    font-size: 1.4em;
    color: #fff; /* White headings */
    margin-bottom: 20px;
    position: relative;
    padding-bottom: 10px;
}

.footer-section h4::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 40px;
    height: 2px;
    background-color: var(--primary-color); /* Accent color for underline */
}

.footer-section p,
.footer-section ul li a {
    color: #bdc3c7; /* Lighter gray for text and links */
    line-height: 1.7;
    transition: color 0.3s ease;
}

.footer-section ul {
    list-style: none;
    padding: 0;
}

.footer-section ul li {
    margin-bottom: 10px;
}

.footer-section ul li a:hover {
    color: var(--primary-color); /* Accent color on hover */
    text-decoration: none;
}

.social-links a {
    color: #bdc3c7;
    font-size: 1.8em;
    margin-right: 15px;
    transition: color 0.3s ease;
}

.social-links a:last-child {
    margin-right: 0;
}

.social-links a:hover {
    color: var(--primary-color); /* Accent color on hover */
}

.footer-section.contact-info i {
    margin-right: 10px;
    color: var(--primary-color); /* Accent color for icons */
}

.footer-bottom {
    text-align: center;
    padding-top: 30px;
    border-top: 1px solid #34495e; /* Slightly lighter border */
    font-size: 0.9em;
}

.footer-bottom p {
    margin: 5px 0;
    color: #95a5a6; /* Even lighter gray for bottom text */
}

.footer-bottom a {
    color: #bdc3c7;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-bottom a:hover {
    color: var(--primary-color);
}

/* Responsive adjustments */
@media (max-width: 992px) {
    .footer-content {
        justify-content: flex-start; /* Align items to start on smaller screens */
    }
    .footer-section {
        flex-basis: calc(50% - 20px); /* Two columns on medium screens */
    }
}

@media (max-width: 768px) {
    .footer-section {
        flex-basis: 100%; /* Single column on small screens */
        min-width: auto;
        text-align: center; /* Center text for single column layout */
    }
    .footer-section h4::after {
        left: 50%;
        transform: translateX(-50%); /* Center the underline */
    }
    .social-links {
        text-align: center; /* Center social icons */
    }
}

/* Ensure --primary-color is defined, e.g., in BaseLayout or global CSS */
:root {
    --primary-color: #007bff; /* Example primary color, ensure consistency */
}

</style>
