<style>
/* Styles for Services section, adapted from style.css */
.services {
    padding: var(--section-padding, 60px 0);
    background-color: var(--background-light, #f9f9f9);
}

.services .container {
    max-width: var(--container-width, 1100px);
    margin: 0 auto;
    padding: 0 var(--container-padding, 15px);
}

.services h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.8rem);
    margin-bottom: 0.5em;
    color: var(--text-color-dark, #333);
}

.services .section-subtitle {
    text-align: center;
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--text-color-medium, #555);
    margin-bottom: 2.5em;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 3em;
}

.service-item {
    background-color: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.07);
    display: flex;
    flex-direction: column;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative; /* For badge positioning */
    overflow: hidden; /* For badge styling */
}

.service-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.service-item.featured {
    border: 2px solid var(--primary-color, #007bff);
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.15);
}

.service-badge {
    position: absolute;
    top: 0;
    right: -1px; /* Adjust to align with border */
    background-color: var(--primary-color, #007bff);
    color: #fff;
    padding: 6px 12px;
    font-size: 0.8rem;
    font-weight: 700;
    border-bottom-left-radius: 8px;
    /* clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%); */
}

.service-icon {
    font-size: 2.8rem; /* Icon size */
    color: var(--primary-color, #007bff);
    margin-bottom: 0.75em;
}

.service-item h3 {
    font-size: clamp(1.3rem, 3vw, 1.6rem);
    margin-bottom: 0.75em;
    color: var(--text-color-dark, #333);
    font-weight: 600;
}

.service-item p {
    font-size: clamp(0.9rem, 2.5vw, 1rem);
    line-height: 1.6;
    color: var(--text-color-medium, #555);
    margin-bottom: 1em;
    flex-grow: 1;
}

.service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5em 0;
    text-align: left;
}

.service-features li {
    font-size: clamp(0.9rem, 2.5vw, 1rem);
    color: var(--text-color-medium, #555);
    margin-bottom: 0.5em;
    padding-left: 1.5em; /* Space for icon */
    position: relative;
}

.service-features li::before {
    content: '‚ú®'; /* Using emoji as bullet */
    position: absolute;
    left: 0;
    color: var(--primary-color, #007bff);
}

.service-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--primary-color, #007bff);
    margin-top: auto; /* Pushes price to the bottom */
}

.services-guarantee {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin: 3em 0;
    padding: 30px;
    background-color: var(--background-accent, #eef7ff);
    border-radius: 8px;
}

.guarantee-item {
    text-align: center;
}

.guarantee-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.5em;
    color: var(--primary-color, #007bff);
}

.guarantee-item h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-color-dark, #333);
    margin-bottom: 0.5em;
}

.guarantee-item p {
    font-size: 0.95rem;
    color: var(--text-color-medium, #555);
    line-height: 1.5;
}

.cta-section {
    text-align: center;
    padding: 30px 20px;
    /* background-color: var(--background-cta, #f0f8ff); */ /* Optional distinct background */
    /* border-radius: 8px; */
    margin-top: 2em;
}

.cta-section h3 {
    font-size: clamp(1.6rem, 3.5vw, 2rem);
    color: var(--text-color-dark, #333);
    margin-bottom: 0.5em;
}

.cta-section p {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    color: var(--text-color-medium, #555);
    margin-bottom: 1.5em;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.cta-button.primary.pulse {
    animation: pulseAnimation 2s infinite;
}

@keyframes pulseAnimation {
    0% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.7);
    }
    70% {
        transform: scale(1.05);
        box-shadow: 0 0 0 10px rgba(0, 123, 255, 0);
    }
    100% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(0, 123, 255, 0);
    }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .services h2 {
        font-size: 1.8rem;
    }
    .services .section-subtitle {
        font-size: 1rem;
    }
    .service-item h3 {
        font-size: 1.2rem;
    }
    .service-item p, .service-features li {
        font-size: 0.9rem;
    }
    .cta-section h3 {
        font-size: 1.5rem;
    }
    .cta-section p {
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .services-grid {
        grid-template-columns: 1fr; /* Stack service items */
    }
    .services-guarantee {
        grid-template-columns: 1fr; /* Stack guarantee items */
        padding: 20px;
    }
    .guarantee-item {
        margin-bottom: 20px;
    }
    .guarantee-item:last-child {
        margin-bottom: 0;
    }
}
</style>
