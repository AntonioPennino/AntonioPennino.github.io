<style>
/* Styles for About section, adapted from style.css */
.about {
    padding: var(--section-padding, 60px 0);
    background-color: var(--background-light, #f9f9f9);
}

.about .container {
    max-width: var(--container-width, 1100px);
    margin: 0 auto;
    padding: 0 var(--container-padding, 15px);
}

.about h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.8rem);
    margin-bottom: 1em;
    color: var(--text-color-dark, #333);
}

.about h2 span {
    margin-right: 0.3em;
}

.about-content {
    display: flex;
    flex-wrap: wrap; /* Allow wrapping on smaller screens */
    align-items: flex-start; /* Align items to the top */
    gap: 40px; /* Space between text and image */
    margin-bottom: 40px;
}

.about-text {
    flex: 1; /* Takes up available space */
    min-width: 300px; /* Minimum width before wrapping */
    line-height: 1.7;
}

.about-text p {
    margin-bottom: 1.5em;
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    color: var(--text-color-medium, #555);
}

.about-text strong {
    color: var(--primary-color, #007bff);
    font-weight: 600;
}

.stats {
    display: flex;
    justify-content: space-around; /* Distribute items evenly */
    gap: 20px;
    margin-top: 30px;
    padding: 20px 0;
    border-top: 1px solid var(--border-color-light, #eee);
    border-bottom: 1px solid var(--border-color-light, #eee);
    flex-wrap: wrap;
}

.stat-item {
    text-align: center;
    min-width: 120px; /* Ensure items don't get too squished */
}

.stat-number {
    display: block;
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 700;
    color: var(--primary-color, #007bff);
    line-height: 1.1;
}

.stat-label {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--text-color-light, #777);
}

.about-image {
    flex-basis: 300px; /* Suggested width for the image container */
    max-width: 100%; /* Ensure it doesn't overflow on small screens */
    text-align: center; /* Center image if it's smaller than container */
}

.about-image img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    object-fit: cover; /* Ensures image covers the area well */
}

.skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Responsive grid */
    gap: 30px;
    margin-top: 40px;
}

.skill-item {
    background-color: #fff;
    padding: 25px;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.07);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.skill-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.skill-item i.fas {
    font-size: 2.5rem; /* Icon size */
    color: var(--primary-color, #007bff);
    margin-bottom: 0.75em;
}

.skill-item h3 {
    font-size: clamp(1.2rem, 3vw, 1.4rem);
    margin-bottom: 0.5em;
    color: var(--text-color-dark, #333);
    font-weight: 600;
}

.skill-item p {
    font-size: clamp(0.9rem, 2vw, 1rem);
    line-height: 1.6;
    color: var(--text-color-medium, #555);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .about-content {
        flex-direction: column; /* Stack text and image vertically */
        align-items: center; /* Center items when stacked */
    }

    .about-text {
        text-align: center; /* Center text content */
    }

    .stats {
        justify-content: center; /* Center stat items */
    }

    .about-image {
        margin-top: 30px; /* Add space above image when stacked */
        flex-basis: auto; /* Allow image to take natural width */
        width: 80%; /* Control width of image container */
        max-width: 350px;
    }
}

@media (max-width: 480px) {
    .about h2 {
        font-size: 1.8rem;
    }
    .stat-number {
        font-size: 2rem;
    }
    .skill-item h3 {
        font-size: 1.1rem;
    }
    .skill-item p {
        font-size: 0.85rem;
    }
}
</style>
